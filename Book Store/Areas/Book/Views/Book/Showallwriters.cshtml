@model PagedList.IPagedList<Book_Store.Models.TBL_Writer>
@{
    ViewBag.Title = "Showallwriters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using PagedList.Mvc


<div class="container" style="margin-top:50px;">
    <h3 style="text-align:center;font-weight:bold;margin-bottom:50px;">مدیریت همه نویسندگان</h3>

    <table class="table table-striped" style="margin-top:80px;margin-bottom:100px;">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col"> نام و نام خانوادگی</th>
                <th scope="col">ملیت</th>
                <th scope="col">ویرایش</th>
                <th scope="col">حذف</th>


            </tr>
        </thead>

        @{int a = 1;}
        @foreach (var test in Model)
        {

            <tbody>
                <tr>
                    <td style="font-weight:bold;">@a</td>

                    @{ a = a + 1;}

                    <td style="font-weight:bold;">@test.FullName</td>

                    <td style="font-weight:bold;">@test.Nationality</td>


                    <td>@Html.ActionLink("ویرایش", "Editwriter", "Book", new { id = @test.ID }, new { @class = "btn alert-info btnproducts" })</td>
                    <td>@Html.ActionLink("حذف", "Deletewriter", "Book", new { id = @test.ID }, new { @class = "btn alert-danger btnproducts" })</td>


                </tr>

            </tbody>
        }
    </table><br />
    @Html.PagedListPager(Model, page => Url.Action("ShowAllPostList", new { page, pageSize = Model.PageSize }))


</div>