
@{
    ViewBag.Title = "AddWriter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:10px;">

    @using (Html.BeginForm("AddWriter", "Writer", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <div class="Frm" id="AddProductForm">
        <h4 style="font-weight:bold;text-align:center;margin-top:50px;color:green;">@ViewBag.WritreAdded</h4><br />

        <h4 style="font-weight:bold;text-align:center;margin-top:50px;">اضافه کردن نویسنده جدید</h4><br />
        <p style="color:black;font-size:15px;font-weight:bold;color:orange;">لطفا فیلدهای مربوطه را با اطلاعات مناسب پر کنید.</p>

        <!--Name-->
        <div class="form-group">
            <label class="lbl">نام کامل نویسنده</label>
            <input type="text" style="max-width:100% !important;margin:0 auto;margin-top:10px;" id="Name" class="form-control" name="Name" placeholder="نام " required />
        </div><hr />

        <!--Nationality-->
        <div class="form-group">
            <label class="lbl">ملیت </label>
            <input type="text" style="max-width:100% !important;margin:0 auto;margin-top:10px;" id="Nationality" class="form-control" name="Nationality" placeholder="ملیت" required />
        </div><hr />

        <!--Writer-->
        <div class="form-group">
            <label class="lbl">سال تولد</label>
            <input type="text" style="max-width:100% !important;margin:0 auto;margin-top:10px;" id="BirthDay" class="form-control" name="BirthDay" placeholder="سال تولد" required />
        </div><hr />

        <!--DeathTime-->
        <div class="form-group">
            <label class="lbl">سال وفات</label>
            <input type="text" style="max-width:100% !important;margin:0 auto;margin-top:10px;" id="DeathTime" class="form-control" name="DeathTime" placeholder="سال وفات" required />
        </div><hr />



        <!--Image-->
        <div class="form-group">
            <label class="lbl">تصویر شاخص</label>
            <input type="file" name="Fileup" id="Fileup" required />
        </div><hr />


        <!--Content-->
        <div class="form-group">
            <label class="lbl">متن</label><br />
            <textarea id="mytextarea" name="mytextarea"></textarea>
        </div><hr /><br />


        <div class="form-group">
            <button class="btn btn-danger">تایید</button>

        </div>
    </div>
    }


</div>


@section scripts
{
    <script src="~/Content/js/jquery-1.10.2.min.js"></script>
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/adapters/jquery.js"></script>
    <script>
        $(function () {
            $('#mytextarea').ckeditor();
        });
    </script>
}
